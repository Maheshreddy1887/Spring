<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		
		<property name="locations" value="camera.properties"></property>
	</bean>


	<bean class="com.xworkz.camera.Camera" id="Camera">
		<property name="brand" value="${p1}"></property>
		<property name="camersize" value="${p2}"></property>
		<property name="price" value="${p3}"></property>
		<property name="color" value="${p4}"></property>
		
	</bean>
